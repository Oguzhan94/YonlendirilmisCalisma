<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.ManualWordAddActivity">

    <EditText
        android:id="@+id/textWordTargetManuelAdded"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="142dp"
        android:background="@drawable/textview_background"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/textWordTranslation"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveWordsManualAdded"
        app:layout_constraintEnd_toEndOf="@+id/textWordSourceManuelAdded"
        app:layout_constraintStart_toStartOf="@+id/textWordSourceManuelAdded"
        app:layout_constraintTop_toBottomOf="@+id/textWordSourceManuelAdded" />

    <EditText
        android:id="@+id/textWordSourceManuelAdded"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/textview_background"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/textWordSource"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSaveWordsManualAdded"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="142dp"
        android:backgroundTint="@color/green_button"
        android:text="@string/buttonSaveWordsManualAdded"
        app:layout_constraintEnd_toEndOf="@+id/textWordTargetManuelAdded"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@+id/textWordTargetManuelAdded"
        app:layout_constraintTop_toBottomOf="@+id/textWordTargetManuelAdded" />

</androidx.constraintlayout.widget.ConstraintLayout>