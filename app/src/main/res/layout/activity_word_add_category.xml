<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.WordAddCategoryActivity">

    <Button
        android:id="@+id/buttonAddWordFromManuel"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@color/green_button"
        android:text="@string/buttonAddWordFromManuel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddWordFromDictionary"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@color/green_button"
        android:text="@string/buttonAddWordFromDictionary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddWordFromManuel" />
</androidx.constraintlayout.widget.ConstraintLayout>